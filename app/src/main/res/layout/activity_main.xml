<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvExpression"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="end"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:paddingTop="4dp"
        android:paddingLeft="2dp"
        />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="end"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        android:paddingLeft="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTujuh"
                style="@style/NumberActionButtonTheme"
                android:text="7" />

            <TextView
                android:id="@+id/tvDelapan"
                style="@style/NumberActionButtonTheme"
                android:text="8" />

            <TextView
                android:id="@+id/tvSembilan"
                style="@style/NumberActionButtonTheme"
                android:text="9" />

            <TextView
                android:id="@+id/tvBagi"
                style="@style/NumberActionMathButtonTheme"
                android:text="/" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvEmpat"
                style="@style/NumberActionButtonTheme"
                android:text="4" />

            <TextView
                android:id="@+id/tvLima"
                style="@style/NumberActionButtonTheme"
                android:text="5" />

            <TextView
                android:id="@+id/tvEnam"
                style="@style/NumberActionButtonTheme"
                android:text="6" />

            <TextView
                android:id="@+id/tvKali"
                style="@style/NumberActionMathButtonTheme"
                android:text="x" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSatu"
                style="@style/NumberActionButtonTheme"
                android:text="1" />

            <TextView
                android:id="@+id/tvDua"
                style="@style/NumberActionButtonTheme"
                android:text="2" />

            <TextView
                android:id="@+id/tvTiga"
                style="@style/NumberActionButtonTheme"
                android:text="3" />

            <TextView
                android:id="@+id/tvMinus"
                style="@style/NumberActionMathButtonTheme"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNol"
                style="@style/NumberActionButtonTheme"
                android:text="0" />

            <TextView
                android:id="@+id/tvDot"
                style="@style/NumberActionButtonTheme"
                android:text="." />

            <ImageView
                android:id="@+id/tvDel"
                style="@style/NumberActionButtonTheme"
                android:scaleType="center"
                android:src="@drawable/ic_backspace" />

            <TextView
                android:id="@+id/tvPlus"
                style="@style/NumberActionMathButtonTheme"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAC"
                style="@style/ActionButtonTheme"
                android:text="AC" />

            <TextView
                android:id="@+id/tvEqual"
                style="@style/EqualButtonTheme"
                android:text="=" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>